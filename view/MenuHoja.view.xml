<mvc:View 
    xmlns="sap.m"
    xmlns:u="sap.uxap" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:f="sap.ui.layout.form" 
    controllerName="sap.ui.entelantenas.controller.MenuHoja">
    <Page
        showHeader="true"
        enableScrolling="true">

        <customHeader>
            <Toolbar>
                <Button type="Back" press="onPressBack" />
                <ToolbarSpacer/>
                <Title text="GestiÃ³n de hojas" level="H2"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://log" press="OnPressLogout" ariaLabelledBy="editButtonLabel"/>
            </Toolbar>
        </customHeader>

        <GenericTile class="sapUiLargeMarginBegin sapUiLargeMarginTop tileLayout" header="Nueva Hoja"
        subheader="" press="onPressNuevaHoja">
            <tileContent>
                <TileContent unit="" footer="Ingresar">
                    <content>
                        <ImageContent src="sap-icon://add-document"/>
                    </content>
                </TileContent>
            </tileContent>
        </GenericTile>
        
        <GenericTile class="sapUiLargeMarginBegin sapUiLargeMarginTop tileLayout" header="Listar Hojas"
        subheader="" press="onPressListarHoja">
            <tileContent>
                <TileContent unit="" footer="Ingresar">
                    <content>
                        <ImageContent src="sap-icon://sap-box"/>
                    </content>
                </TileContent>
            </tileContent>
        </GenericTile>

        <GenericTile class="sapUiLargeMarginBegin sapUiLargeMarginTop tileLayout" header="Asignar Parametros"
        subheader="" press="onPressAsignarParametro">
            <tileContent>
                <TileContent unit="" footer="Ingresar">
                    <content>
                        <ImageContent src="sap-icon://course-program"/>
                    </content>
                </TileContent>
            </tileContent>
        </GenericTile>

    </Page>
</mvc:View>