<mvc:View 
    xmlns="sap.m"
    xmlns:u="sap.uxap" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:f="sap.ui.layout.form" 
    controllerName="sap.ui.entelantenas.controller.MenuSitio">
    <Page title="Gestión de Sitios"
        showNavButton="true" 
        navButtonPress="onPressBack"
        showHeader="true"
        enableScrolling="true">

        <customHeader>
            <Toolbar>
                <Button type="Back" press="onPressBack" />
                <ToolbarSpacer/>
                <Title text="Gestión de Sitios" level="H2"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://log" press="OnPressLogout" ariaLabelledBy="editButtonLabel"/>
            </Toolbar>
        </customHeader>

        <GenericTile class="sapUiLargeMarginBegin sapUiLargeMarginTop tileLayout" header="Nuevo Sitio"
        subheader="" press="onPressNuevoSitio">
            <tileContent>
                <TileContent unit="" footer="Ingresar">
                    <content>
                        <ImageContent src="sap-icon://home"/>
                    </content>
                </TileContent>
            </tileContent>
        </GenericTile>
        
        <GenericTile class="sapUiLargeMarginBegin sapUiLargeMarginTop tileLayout" header="Listar Sitios"
        subheader="" press="onPressListarSitio">
            <tileContent>
                <TileContent unit="" footer="Ingresar">
                    <content>
                        <ImageContent src="sap-icon://addresses"/>
                    </content>
                </TileContent>
            </tileContent>
        </GenericTile>

    </Page>
</mvc:View>